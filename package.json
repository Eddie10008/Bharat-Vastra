{
  "name": "bharat-vastra",
  "version": "1.0.0",
  "description": "Premium Indian Attire & Jewelry E-commerce Platform",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run ai-bot\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "concurrently \"node server.js\" \"node start-ai-bot.js\"",
    "ai-bot": "node ai-image-bot.js",
    "ai-bot-start": "node start-ai-bot.js",
    "ai-error-bot": "node ai-error-bot.js",
    "ai-bot-start": "./start-ai-bot.sh"
  },
  "keywords": [
    "e-commerce",
    "indian-attire",
    "jewelry",
    "saree",
    "premium"
  ],
  "author": "Bharat Vastra Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "stripe": "^13.5.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.32.6",
    "jimp": "^0.22.10",
    "cron": "^2.4.4",
    "uuid": "^9.0.0",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
